@model project_scoo.Models.Passenger
<!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best Trips <br />
                        <span class="text-primary">for your comfort!</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Here in BTRS where you find comfort, safety and Fast Service
                        with elite drivers and the newest Buses in the Kingdom
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" for="Name">Full name</label>
                                            <input asp-for="Name" type="text" id="Name" class="form-control" />
                                            
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" for="Username">Username</label>
                                            <input asp-for="Username" type="text" id="Username" class="form-control" />
                                            
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Email">Email address</label>
                                    <input asp-for="Email" type="email" id="Email" class="form-control" />
                                   
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Password">Password</label>
                                    <input asp-for="Password" type="password" id="Password" class="form-control" />
                                    
                                </div>

                                <!-- Radio buttons for Gender -->
                                <div class="form-check">
                                    <label class="form-label" for="gender">Gender</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="gender" class="form-check-input" type="radio" name="gender" id="male" value="0">
                                    <label class="form-check-label" for="male">
                                        Male
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input asp-for="gender" class="form-check-input" type="radio" name="gender" id="female" value="1" checked>
                                    <label class="form-check-label" for="female">
                                        Female
                                    </label>
                                </div>


                                <!-- Submit button -->
                                <div class="text-center">
                                    <button asp-action="SignUp" asp-controller="Passengers" type="submit" class="btn btn-outline-primary">
                                        Sign Up
                                    </button> 
                                    <p> Already have an account?<a asp-action="Login" asp-controller="Passengers" class="btn btn-link">Login</a></p>
                                </div>

                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->

    @TempData["Msg"]
