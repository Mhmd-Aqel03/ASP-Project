@model FootballGame.Models.Login;

<!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best Trips <br />
                        <span class="text-primary">for your comfort!</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Here in BTRS where you find comfort, safety and Fast Service 
                        with elite drivers and the newest Buses in the Kingdom
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                          
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Username">Username </label>
                                    <input asp-for="Username" type="text" id="Username" class="form-control" />
                                    
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Password">Password</label>
                                    <input asp-for="Password" type="password" id="Password" class="form-control" />
                                   
                                </div>

                               
                                
                                <!-- Submit button -->
                                <div class="text-center">
                                <button asp-action="Login" asp-controller="Passengers" type="submit" class="btn btn-outline-primary">
                                    Login
                                </button>
                                </div>
                                <br />
                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p>You don't have an account? <a asp-action="SignUp" asp-controller="Passengers" class="btn btn-link"> SignUp</a></p>


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->

@TempData["Msg"]
